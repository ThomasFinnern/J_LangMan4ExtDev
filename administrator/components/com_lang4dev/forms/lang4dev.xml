<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="Finnern\Component\Lang4dev\Administrator\Field">
	<!-- project selection -->
	<field
			id="selectProject"
			name="selectProject"
			type="ProjectSelect"
			label="COM_LANG4DEV_SELECT_PROJECT"
			description="COM_LANG4DEV_SELECT_PROJECT_DESC"
			onchange="Joomla.submitform('lang4dev.selectProject', this.form)"
	/>


	<!-- subproject selection -->
	<field
			id="selectSubproject"
			name="selectSubproject"
			type="SubprojectSelect"
			label="COM_LANG4DEV_SELECT_SUB_PROJECT"
			description="COM_LANG4DEV_SELECT_SUB_PROJECT_DESC"
			onchange="Joomla.submitform('lang4dev.selectProject', this.form)"
	/>

	<field
			name="selectSourceLangId"
			type="text"
			label="COM_LANG4DEV_TRANS_SOURCE_LANG_ID"
			description="COM_LANG4DEV_TRANS_SOURCE_LANG_ID_DESC"
			default="Xen-GB"
			onchange="Joomla.submitform('lang4dev.selectLangIds', this.form)"
	/>

	<field
			name="selectTargetLangId"
			type="text"
			label="COM_LANG4DEV_TRANS_TARGET_LANG_ID"
			description="COM_LANG4DEV_TRANS_TARGET_LANG_ID_DESC"
			default="Xde-DE"
			onchange="Joomla.submitform('lang4dev.selectLangIds', this.form)"
	/>


</form>
